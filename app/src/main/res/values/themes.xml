<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Herbifyapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/teal_100</item>
        <item name="colorPrimaryDark" tools:targetApi="23">@color/gray400</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:textColor" tools:targetApi="23">@color/black</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="CustomSearchView" parent="android:Theme.Holo">
        <item name="queryBackground">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="searchIcon">@null</item>
        <item name="editTextColor">@color/gray400</item>
        <item name="android:textColor">@color/gray400</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="Theme.Herbifyapp">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

</resources>